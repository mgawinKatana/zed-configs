[
    {
        "bindings": {
            "alt-l": "workspace::ActivatePaneRight",
            "alt-h": "workspace::ActivatePaneLeft",
            "ctrl-k *": null,
            "ctrl-k": null
        }
    },
    {
        "context": "Editor && vim_mode == insert",
        "bindings": {
            "ctrl-h": "editor::Backspace",
            "ctrl-c": "editor::ShowEditPrediction",
            "ctrl-l": "editor::AcceptPartialEditPrediction",
            "ctrl-j": "editor::NextEditPrediction",
            "alt-.": "editor::AcceptEditPrediction",
            "ctrl-k": "editor::PreviousEditPrediction"
        }
    },
    {
        "context": "Editor && vim_mode == normal",
        "bindings": {
            "g d": "editor::GoToDefinitionSplit"
        }
      },
    {
        "context": "Workspace",
        "bindings": {
            "alt-x g": ["task::Spawn", { "task_name": "open_lazygit" }],
            "alt-x c": ["task::Spawn", { "task_name": "open_vs_code" }]
        }
    },
    {
        "context": "Workspace",
        "bindings": {
            "ctrl-s": "workspace::SaveAll"
        }
    },
    {
        "context": "Pane",
        "bindings": {
            "ctrl-tab": "pane::ActivateNextItem",
            "ctrl-shift-tab": "pane::ActivatePreviousItem"
        }
    },
    {
        "context": "Editor && vim_mode == visual",
        "bindings": {
            "p": ["vim::Paste", { "preserve_clipboard": true }],
            "S": "vim::PushAddSurrounds"
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "ctrl-,": null
        }
    },
    {
        "context": "Editor && vim_mode == normal",
        "bindings": {
            "s": ["vim::PushSneak", {}],
            "S": ["vim::PushSneakBackward", {}]
        }
    }
]
