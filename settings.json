{
    "vim_mode": true,
    "vim": {
        "use_system_clipboard": "always",
        "use_multiline_find": false,
        "use_smartcase_find": true,
        "toggle_relative_line_numbers": true
    },

    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },

    "auto_update": false,
    "auto_update_extensions": {
        "docker-compose": false,
        "dockerfile": false,
        "html": false
    },

    "autosave": "on_window_change",
    "format_on_save": "off",
    "confirm_quit": true,
    "max_tabs": 5,
    "cursor_blink": false,
    "auto_reveal_entries": false,
    "auto_fold_dirs": true,
    "ensure_final_newline_on_save": false,
    "always_treat_brackets_as_autoclosed": true,
    "double_click_in_multibuffer": "open",
    "restore_on_startup": "last_session",
    "autoscroll_on_clicks": true,
    "formatter": "language_server",
    "seed_search_query_from_cursor": "selection",
    "use_system_path_prompts": false,
    "relative_line_numbers": true,

    "show_completions_on_input": true,
    "show_edit_predictions": true,
    "features": {
        "edit_prediction_provider": "zed",
        "copilot": true
    },

    "buffer_font_family": "MesloLGL NF",
    "buffer_font_size": 12,
    "buffer_font_weight": 80,
    "buffer_line_height": {
        "custom": 1.4
    },

    "ui_font_family": "MesloLGL NF",
    "ui_font_size": 12,
    "ui_font_weight": 80,

    "show_whitespaces": "boundary",
    "vertical_scroll_margin": 5,
    "horizontal_scroll_margin": 10,
    "icon_theme": "VSCode Icons (Dark)",
    "theme": {
        "mode": "dark",
        "light": "Nightfox",
        "dark": "Nightfox"
    },
    "experimental.theme_overrides": {
        "text.accent": "#ffffffff",
        "editor.invisible": "#FFFFFF08"
    },
    "active_pane_modifiers": {
        "border_size": 0.5,
        "inactive_opacity": 0.8,
        "magnification": 1.0
    },
    "tab_size": 4,
    "tabs": {
        "git_status": true,
        "show_diagnostics": "errors"
    },
    "journal": {
        "hour_format": "hour24"
    },

    "show_wrap_guides": true,
    "wrap_guides": [80, 120],
    "indent_guides": {
        "enabled": true
    },

    "git": {
        "inline_blame": {
            "enabled": true,
            "min_column": 60,
            "delay_ms": 1000
        },
        "git_gutter": "tracked_files",
        "gutter_debounce": 1000
    },
    "assistant": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4"
        },
        "version": "2",
        "enabled": true,
        "button": true,
        "provider": null,
        "dock": "right"
    },
    "project_panel": {
        "dock": "right",
        "auto_reveal_entries": false,
        "show_diagnostics": "errors"
    },
    "terminal": {
        "env": {
            "EDITOR": "zed"
        },
        "font_family": "MesloLGS NFM"
    },

    "collaboration_panel": {
        "button": false
    },
    "chat_panel": {
        "button": "never"
    },
    "jupyter": {
        "kernel_selections": {
            "tsx": "deno"
        }
    },
    "calls": {
        "mute_on_join": true
    },
    "diagnostics": {
        "include_warnings": false
    },
    "file_finder": {
        "modal_max_width": "large"
    }
}
